.container{
  padding: 0;
}
.image-wrap{
  width: 100px;
  height: 140px;
  display: inline-block;
}
.image-wrap image {
    width: 100%;
    height: 75%;
    padding: 5px;
}
.image-wrap .image-remover{
  width: 33px;
  font-size: 14px;
  color: #1296db;
  margin-left: 35%;
}
.image-btn{
  display: block !important;
  width: 100px !important;
  color: #1296db;
  border: 1px solid #1296db;
  background: #fff;
  font-size: 12px !important;
  margin-bottom: 10px;
}